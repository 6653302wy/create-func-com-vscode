{
	"name": "create-func-com",
	"displayName": "create-func-com",
	"description": "右键创建函数式组件",
	"version": "0.2.1",
	"keywords": [
		"react",
		"模板",
		"组件",
		"component",
		"html",
		"css",
		"hooks",
		"页面",
		"自动",
		"生成"
	],
	"publisher": "wanpp",
	"repository": {
		"type": "git",
		"url": "git@jihulab.com:villaland/frontend/vgene-utils.git"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:create-func-com.component",
		"onCommand:create-func-com.page"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "create-func-com.component",
				"title": "创建react函数式组件"
			},
			{
				"command": "create-func-com.page",
				"title": "创建react页面"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "create-func-com.component",
					"group": "2_workspace@2"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "create-func-com.page",
					"group": "2_workspace@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	}
}